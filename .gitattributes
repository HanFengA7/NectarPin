# Auto detect text files and perform LF normalization
* text=auto

# Go source files
*.go text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows specific files
*.bat text eol=crlf
*.cmd text eol=crlf

# Vue/TypeScript files
*.vue text eol=lf
*.ts text eol=lf
*.js text eol=lf
*.css text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
