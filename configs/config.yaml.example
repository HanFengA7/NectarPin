# NectarPin 配置文件示例
# 复制此文件为 config.yaml 并修改相应配置

server:
  host: "0.0.0.0"
  port: "8080"
  mode: "debug"  # debug, release, test

database:
  host: "localhost"
  port: "3306"
  user: "root"
  password: "your_password"
  dbname: "nectarpin"
  charset: "utf8mb4"

# 日志配置
log:
  level: "info"  # debug, info, warn, error
  file: "logs/app.log"

